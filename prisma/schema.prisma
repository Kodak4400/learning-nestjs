// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Question {
  id  String @id
  title String
  body String
  status String
  answer Answer[]
  createdAt String
  updatedAt String

  @@unique([id])
}

model Answer {
  id  String @id
  questionId String
  body String
  createdAt String
  updatedAt String
  question Question @relation(fields: [questionId], references: [id])

  @@unique([id])
}
